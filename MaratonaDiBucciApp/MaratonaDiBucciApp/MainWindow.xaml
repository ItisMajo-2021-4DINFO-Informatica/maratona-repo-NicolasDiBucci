<Window x:Class="MaratonaDiBucciApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaratonaDiBucciApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel  Margin="0,0,2,0" Background="#99aab5">
        <DataGrid x:Name="DgElencoMaratona" Height="241" Background="#99aab5"/>

        <Button x:Name="BtnLeggiFile" Content="Leggi file" Click="BtnLeggiFile_Click" RenderTransformOrigin="0.503,6.406"/>
        <TextBlock>Maratoneta</TextBlock>
        <TextBox x:Name="TxtMaratoneta" TextChanged="TextBox_TextChanged"></TextBox>
        <TextBlock>città</TextBlock>
        <TextBox x:Name="TxtCitta" TextChanged="TextBox_TextChanged"></TextBox>
        <Label x:Name="LblTempo" Content=""></Label>
        <Button x:Name="BtnTempoinminuti" Content="Visualiza Tempo Atleta" Click="BtnTempoinminuti_Click"/>
    </StackPanel>
</Window>
